all: O0C.EXE

install: O0C.EXE O0C386.EXE
	COPY O0C.EXE ..\
	COPY O0C386.EXE ..\

O0C.EXE: O0C.C GEN.C PARSER.C RISC.C SCAN.C UTIL.C UTIL.H RISC.H PARSER.H SCAN.H GEN.H
        wcl -obmiler O0C.C GEN.C PARSER.C RISC.C SCAN.C UTIL.C -fe=O0C.EXE

O0C386.EXE: O0C.C GEN.C PARSER.C RISC.C SCAN.C UTIL.C UTIL.H RISC.H PARSER.H SCAN.H GEN.H
        wcl386 -obmiler O0C.C GEN.C PARSER.C RISC.C SCAN.C UTIL.C -l=dos4g -fe=O0C386.EXE

O0C: O0C.C GEN.C PARSER.C RISC.C SCAN.C UTIL.C UTIL.H RISC.H PARSER.H SCAN.H GEN.H
        gcc -x c GEN.C O0C.C PARSER.C RISC.C SCAN.C UTIL.C -o O0C
clean:
        del O0C.EXE
        del O0C386.EXE
        del *.OBJ
        del *.BAK
